{
	"name": "songdash",
	"version": "1.0.0",
	"description": "A multiplayer party game based on 'Name that Tune' - compete to identify songs the fastest!",
	"type": "module",
	"main": "server.js",
	"scripts": {
		"start": "NODE_ENV=production node .",
		"dev": "nodemon .",
		"build:client": "vite build",
		"build:server-bundle": "vite build --config vite.config.server.js",
		"build:server-binary": "node build.js",
		"build:server": "pnpm build:server-bundle && pnpm build:server-binary",
		"build": "pnpm build:client && pnpm build:server",
		"preview": "NODE_ENV=production node ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Maathias/SongDash.git"
	},
	"keywords": [
		"game",
		"party-game",
		"music",
		"name-that-tune",
		"multiplayer",
		"websocket"
	],
	"author": "Maathias",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Maathias/SongDash/issues"
	},
	"homepage": "https://github.com/Maathias/SongDash#readme",
	"dependencies": {
		"dotenv": "^16.4.5",
		"express": "^4.18.2",
		"qrcode": "^1.5.4",
		"ua-parser-js": "^2.0.7",
		"ws": "^8.11.0"
	},
	"devDependencies": {
		"nexe": "5.0.0-beta.4",
		"nodemon": "^3.1.11",
		"vite": "^7.2.7"
	}
}